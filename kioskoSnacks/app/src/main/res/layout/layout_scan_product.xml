<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#80000000"
    android:id="@+id/infoProduc"
    app:cardCornerRadius="100dp">

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundGray"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/clouse"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/cerrar" />

        <ImageView
            android:id="@+id/imageInventory"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@color/white" />

        <TextView
            android:id="@+id/nombreSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="product name"
            android:textSize="@dimen/ProducNameCard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/deleteInventory"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button_red"
                android:text="Delete"
                android:textSize="@dimen/deaultTextSize" />

            <Button
                android:id="@+id/cancelInventory"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/boton_redondo"
                android:text="Edit"
                android:textSize="@dimen/deaultTextSize" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>