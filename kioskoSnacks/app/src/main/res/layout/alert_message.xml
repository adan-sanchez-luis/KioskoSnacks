<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="100dp">

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@color/aletColor"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/alertWarning"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="alert title"
            android:textColor="@color/white"
            android:textSize="@dimen/ProducNameCard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
			android:layout_marginBottom="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/alertCancel"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/button_red"
                android:text="Cancel"
                android:textSize="@dimen/deaultTextSize" />

            <Button
                android:id="@+id/alertConfirm"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/boton_redondo"
                android:text="Accept"
                android:textSize="@dimen/deaultTextSize" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>